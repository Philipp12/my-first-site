$(document).ready(function(){
	$("ul").mouseover(function(){
		$("li").show();
	})
	$("ul").mouseleave(function(){
		$("li").hide();
	})
	$("#OSeriale").click(function(){
		$("#p5").text("Данный проект был задуман Линецким Филом и Жекой Фоломеевым еще в 2007 году. Тогда, еще учась в школе, они интересовались дизайном и информационными технологиями, а также видеоиграми. Со временем эта идея не исчезла, но обрела новую форму. Воплощать его мы начали в 2015 году.");
		$("#Zagolovok").text("О Сериале");
	})
	$("#OGeroyah").click(function(){
		$("#p5").text("Главный героем является Виктор Синицын");
		$("#Zagolovok").text("О Героях");
	})
	$("#Glavnaya").click(function(){
		$("#p5").text("В центре сюжета находится молодой парень по имени Виктор Синицын, который долго отутствовал в родном городе. По возвращению домой он обнаруживает, что за родной район борются две преступные группировки. Судьба ставит его перед тяжелым выбором. Ему нужно определить чью сторону принять и как жить дальше");
		$("#Zagolovok").text("Сюжет");
	})
	$("#obAvtore").click(function(){
		$("#p5").text("Автором этого произведения является Евгений Фоломеев");
		$("#Zagolovok").text("Евгюша Фоломюша");
	})
	$("li").mouseover(function(){
		$(this).css("background-color","yellow");
		$(this).css("width","75px");
	})
	$("li").mouseleave(function(){
		$(this).css("background-color","#007143");
	})
});
